#include <stdio.h>

struct Date {
    int day, month, year;
};

struct Book {
    char title[50];
    char author[50];
    float price;
    struct Date publicationDate;
};

int main() {
    struct Book books[3];

    for (int i = 0; i < 3; i++) {
        printf("\nEnter details of book %d\n", i + 1);

        printf("Title: ");
        scanf("%s", books[i].title);

        printf("Author: ");
        scanf("%s", books[i].author);

        printf("Price: ");
        scanf("%f", &books[i].price);

        printf("Publication date (day month year): ");
        scanf("%d %d %d",
               &books[i].publicationDate.day,
               &books[i].publicationDate.month,
               &books[i].publicationDate.year);
    }

    printf("\n--- Book Details ---\n");
    for (int i = 0; i < 3; i++) {
        printf("\nBook %d\n", i + 1);
        printf("Title: %s\n", books[i].title);
        printf("Author: %s\n", books[i].author);
        printf("Price: %.2f\n", books[i].price);
        printf("Published on: %02d-%02d-%04d\n",
               books[i].publicationDate.day,
               books[i].publicationDate.month,
               books[i].publicationDate.year);
    }

    return 0;
}
